<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tanma.iss_pass.MainActivity">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lyRow1"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="lat :"
        />
    <EditText
        android:id="@+id/ET_latitude"
        android:layout_width="119dp"
        android:layout_height="35dp"
        android:inputType="numberSigned|numberDecimal"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="28dp"
        android:layout_height="23dp"
        android:text="lng :"
        />
    <EditText
        android:id="@+id/longitude"
        android:layout_width="118dp"
        android:layout_height="35dp"
        android:inputType="numberSigned|numberDecimal"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="249dp"
        tools:layout_editor_absoluteY="9dp" />

</LinearLayout>






<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/idRow2">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="26dp"
        android:layout_height="22dp"
        android:text="alt :"
        />
    <EditText
        android:id="@+id/altitude"
        android:layout_width="119dp"
        android:layout_height="35dp"
        android:inputType="numberDecimal"
        android:textSize="12sp"
        />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="31dp"
        android:layout_height="35dp"
        android:text="N  :"
        />
    <EditText
        android:id="@+id/N"
        android:layout_width="119dp"
        android:layout_height="35dp"

        android:inputType="number"
        android:textSize="12sp"
        />


</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lyButtons">
        <Button
            android:id="@+id/get_prediction"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:enabled="false"
            android:onClick="getPrediction"
            android:text="Get Prediction"
            tools:enabled="false" />

        <Button
            android:id="@+id/myLocation"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:enabled="false"
            android:onClick="getMyLocation"
            android:text="My Location"
            />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/errorInfo"
        android:layout_width="340dp"
        android:layout_height="48dp"
         android:textColor="@color/colorRed"
        android:text="use get prediction for custom search, my location for device location search"
        android:textSize="10sp"
       />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="147dp"
        android:id="@+id/lyheaders">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="104dp"
            android:layout_height="37dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Duration" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="141dp"
            android:layout_height="32dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:text="ISS Pass time              " />
    </LinearLayout>

    <fragment
        android:id="@+id/fragmentContainer"
        android:name="android.support.v4.app.ListFragment"
        android:layout_width="368dp"
        android:layout_height="244dp"

        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="268dp">

    </fragment>

</LinearLayout>
